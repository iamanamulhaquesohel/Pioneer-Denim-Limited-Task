@model IEnumerable<RetailerVM>
@{
    ViewData["Title"] = "Retailers";
}

<div class="row">

    <div class="col-12">
        <h3>Retailers</h3>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Department Name</th>
                    <th>Department Code</th>
                    <th>Retailer Name</th>
                    <th>Retailer Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ret in Model)
                {
                    <tr>
                        <td>@ret.DepartmentName</td>
                        <td>@ret.DepartmentCode</td>
                        <td>@ret.RetailerName</td>
                        <td>@ret.RetailerCode</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

