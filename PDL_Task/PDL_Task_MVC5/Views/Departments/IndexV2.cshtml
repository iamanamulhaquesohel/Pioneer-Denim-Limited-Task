@model IEnumerable<PDL_Task_MVC5.ViewModels.RetailerVM>
@{
    ViewData["Title"] = "IndexV2";
}

<div class="row">

    <div class="col-12">
        <h3>Retailers</h3>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Department Name</th>
                    <th>Department Code</th>
                    <th>Retailer Name</th>
                    <th>Retailer Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ret in Model)
                {
                    <tr>
                        <td>@ret.DepartmentName</td>
                        <td>@ret.DepartmentCode</td>
                        <td>@ret.RetailerName</td>
                        <td>@ret.RetailerCode</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4">
                        <a class="btn btn-success" href="@Url.Action("ExportToPdf", "Departments", new { })"><i class="bi bi-file-earmark-pdf-fill"></i> To Pdf</a>
                        <a class="btn btn-success" href="@Url.Action("ExportToExcel", "Departments", new { })"><i class="bi bi-file-earmark-excel-fill"></i> To Excel</a>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
@section styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
}

